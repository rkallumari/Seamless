<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transmitting!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backgroundYes"
        android:layout_width="326dp"
        android:layout_height="91dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="62dp"
        android:onClick="startTransmittingInBackground"
        android:text="Click here to enable transmission in background"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/backgroundNo"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backgroundNo"
        android:layout_width="361dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="stopTransmittingInBackground"
        android:text="Click here to stop the background trasmission"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>